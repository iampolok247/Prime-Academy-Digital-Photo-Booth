# Apache .htaccess Configuration
# Prime Academy Digital Photo Booth
# For shared hosting / cPanel deployment

# Enable RewriteEngine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Force HTTPS (recommended for camera access)
    # Uncomment the following lines to force HTTPS
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Remove .php extension from URLs (optional)
    # RewriteCond %{REQUEST_FILENAME} !-d
    # RewriteCond %{REQUEST_FILENAME}\.php -f
    # RewriteRule ^([^\.]+)$ $1.php [NC,L]
</IfModule>

# Prevent directory browsing
Options -Indexes

# Default index files
DirectoryIndex index.php index.html

# Custom error pages (optional)
# ErrorDocument 404 /404.html
# ErrorDocument 403 /403.html
# ErrorDocument 500 /500.html

# Security Headers
<IfModule mod_headers.c>
    # X-Frame-Options
    Header set X-Frame-Options "SAMEORIGIN"
    
    # X-Content-Type-Options
    Header set X-Content-Type-Options "nosniff"
    
    # X-XSS-Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy (adjust as needed)
    # Header set Content-Security-Policy "default-src 'self' https: data: 'unsafe-inline' 'unsafe-eval'"
</IfModule>

# File Protection
<FilesMatch "\.(htaccess|htpasswd|ini|log|json)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Protect storage directory (leads.json)
<DirectoryMatch "^.*/storage/.*$">
    Order deny,allow
    Deny from all
</DirectoryMatch>

# Enable CORS for AJAX requests (if needed)
<IfModule mod_headers.c>
    # Allow same-origin requests
    # Header set Access-Control-Allow-Origin "*"
    # Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    # Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>

# PHP Configuration (if allowed)
<IfModule mod_php7.c>
    # Memory limit
    php_value memory_limit 128M
    
    # Upload limits
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    
    # Error reporting (disable in production)
    php_flag display_errors Off
    php_value error_reporting 0
    
    # Session configuration
    php_value session.cookie_httponly 1
</IfModule>

# Compression for faster loading
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# UTF-8 Encoding
AddDefaultCharset UTF-8
AddCharset UTF-8 .html .css .js .xml .json .rss .atom

# MIME Types
<IfModule mod_mime.c>
    AddType application/javascript js
    AddType text/css css
    AddType image/png png
    AddType image/jpeg jpg jpeg
    AddType image/gif gif
    AddType image/svg+xml svg
</IfModule>
